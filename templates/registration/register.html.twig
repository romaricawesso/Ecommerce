{% extends 'base.html.twig' %}

{% block title %} Inscription{% endblock %}

{% block body %}
<section class="container">
    <div class="row">
        <div class="col">
            {{ form_start(registrationForm) }}
                <fieldset class="mb-3">
                    <legend> Mon Identité </legend>
                    {{ form_row(registrationForm.lastname) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>

                <fieldset class="mb-3">
                    <legend> Mes coordonnées </legend>
                    {{ form_row(registrationForm.adress) }}
                    {{ form_row(registrationForm.zipcode) }}
                    {{ form_row(registrationForm.city) }}
                </fieldset>
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-primary btn-lg my-3">Register</button>
                <a href="{{path('app_login')}}" class=" btn btn-secondary"> Me connecter</a>
            {{ form_end(registrationForm) }}
        </div>
    </div>
</section>
    <h1>Inscription</h1>

    
{% endblock %}
